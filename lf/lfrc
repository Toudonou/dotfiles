# Basic Settings
set hidden true
set ignorecase true
set icons true
set info size
set dircounts 
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}


cmd trash ${{
 mv "$f" /run/media/oswald/Oswald/.Trash-1000/files/
 # trash-put "$f"
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.rar) unrar x "$f" ;;
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}


# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d

map c $code "$f"

map au unarchive

# Basic Functions
map DD trash
map p paste
map d cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir


# Movement
map gh cd ~/
map gd cd ~/Desktop
map gD cd ~/Downloads
map gc cd ~/.config
map go cd /run/media/oswald/Oswald
map gr cd /

